datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

generator erd {
    provider = "prisma-erd-generator"
    output = "../../../docs/schema_erd.svg"
}

model Tutorial {
    id        Int      @id @default(autoincrement())
    title     String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Lesson {
    id        Int      @id @default(autoincrement())
    title     String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Topic {
    id        Int      @id @default(autoincrement())
    name      String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
