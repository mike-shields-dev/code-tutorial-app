{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../",
    "types": ["node", "jest", "global"],
    "typeRoots": ["./node_modules/@types", "../shared/types"],
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts",
    "../shared/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist",
    "./coverage",
    "jest.config.js",
    "jest.setup.js"
  ]
}
