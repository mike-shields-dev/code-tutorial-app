{
  "name": "code_tutorial_app_api",
  "version": "1.0.0",
  "scripts": {
    "docker:up": "docker-compose up -d && scripts/wait-for-docker.sh .env.development",
    "dev": "pnpm docker:up && cross-env NODE_ENV=development ts-node scripts/seedDb.ts && cross-env NODE_ENV=development nodemon src/index.ts",
    "start": "pnpm build && cross-env NODE_ENV=production node dist/index.js",
    "build": "echo 'Building backend...' && tsc",
    "test": "cross-env NODE_ENV=test nodemon src/index.ts"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/qs": "^6.9.15",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.11",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
